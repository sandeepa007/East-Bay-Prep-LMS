<li id="section-0" class="first-section-li section main clearfix mb-25" role="region" aria-label="{{{generalsectiontitlename}}}">
   <div class="p-10 course-cover-image" style="background-image: linear-gradient(to right, rgba(14, 35, 53, 0.68), rgba(14, 35, 53, 0.68)), url({{{remuicourseimage}}});">
    {{#rightside}}
    <div class="right side">
        {{{rightside}}}
    </div>
    {{/rightside}}
      <div class="text-white">
         <div class="page-title mb-15">{{{generalsectiontitle}}}</div>
         <div class="font-size-14 summary">{{{ generalsectionsummary }}}</div>

        
      </div>
      <div class="container teacher-img">
        <div class="row text-white">
        {{#teachers}}
          {{{teacherimg}}}
        {{/teachers}}
        </div>
      </div>
   </div>

   <span class="hidden sectionname">{{{generalsectiontitlename}}}</span>

   <div class="content">
   {{#percentage}}
      <div class="progress progress-square">
         <div class="progress-bar" style="width: {{{percentage}}}%;" role="progressbar">
            <span class="sr-only">{{{percentage}}}% Complete</span>
         </div>
      </div>
   {{/percentage}}
            <div class="section_availability badge badge-pill badge-info mb-10"></div>
               <ul class="section first-section img-text row p-0 pb-20 d-flex justify-content-center text-center showhideactivity">
         {{#activities}}
               <li class="activity first-section-activity {{{modulename}}} modtype_{{{modulename}}} col-6 col-sm-6 col-md-4 col-lg-2 justify-content-center p-0 pt-10" id="module-{{id}}">
                  <div>
                     <div>
                        <div class="activityinstance p-0 d-inline-block">
                           {{{title}}}
                           <span class="pl-10"><span class="editing_move moodle-core-dragdrop-draghandle" title="Move resource" tabindex="0" data-draggroups="resource" role="button" data-sectionreturn="0"><i class="icon fa fa-arrows fa-fw  iconsmall" aria-hidden="true" aria-label="" style="cursor: move;"></i></span></span>
                        </div>
                        <div class="actions">
                           {{{completion}}}
                           {{{modicons}}}
                           {{{availstatus}}}
                        </div>
                     </div>
                  </div>
               </li>
         {{/activities}}
               </ul>
            <div class="text-center showactivitywrapper">
            <button class="showactivity btn btn-primary px-25 show" style="visibility:     hidden;">Show More</button>
            </div>
            {{{addnewactivity}}}
   </div>
</li>


{{#js}}

     // change css for li after drag and drop
    
     // select the target node
      var target = document.querySelector('ul.remui-format-list ul.first-section')
      // create an observer instance
      var observer = new MutationObserver(function(mutations) {
        $('ul.remui-format-list ul.first-section').find('li.activity').attr('class', 'activity first-section-activity forum modtype_forum col-6 col-sm-6 col-md-4 col-lg-2 justify-content-center p-0 pt-10 yui3-dd-drop yui3-dd-draggable');
        $('ul.remui-format-list ul.first-section').find('.activityinstance').attr('class', 'activityinstance p-0 d-inline-block');
        $('ul.remui-format-list ul.first-section').find('.mod-indent-outer').removeAttr('class');
        });
      // configuration of the observer:
      var config = { attributes: true, childList: true, characterData: true };
      // pass in the target node, as well as the observer options
      observer.observe(target, config);

    // show hide extra activities in general/first section
    jQuery('.showactivity').on('click', function() {
        jQuery('.section.first-section').toggleClass('showhideactivity');
        if(jQuery(this).hasClass('show')) {
            jQuery(this).text('{{# str }} showless, theme_remui {{/ str }}');
            jQuery(this).toggleClass('show');
        } else {
            jQuery(this).text('{{# str }} showmore, theme_remui {{/ str }}');
            jQuery(this).toggleClass('show');
        }
    });

    // show load more button conditionally
    
    jQuery(window).resize(function(){
        var wwidth = jQuery(window).width();
        var count = jQuery(".first-section-activity").length;

        if(wwidth > 991) {
            if(count > 6) {
                jQuery('.showactivity').removeAttr( 'style' );
                jQuery('.showactivitywrapper').removeAttr( 'style' );
                }
            else {
                jQuery('.showactivity').css('display', 'none');
                jQuery('.showactivitywrapper').css('display', 'none');
                }

        } else if(wwidth > 767 && wwidth < 992) {
            if(count > 3) {
                jQuery('.showactivity').removeAttr( 'style' );
                jQuery('.showactivitywrapper').removeAttr( 'style' );
                }
            else {
                jQuery('.showactivity').css('display', 'none');
                jQuery('.showactivitywrapper').css('display', 'none');
                }
        } else {
            if(count > 2) {
                jQuery('.showactivity').removeAttr( 'style' );
                jQuery('.showactivitywrapper').removeAttr( 'style' );
                }
            else {
                jQuery('.showactivity').css('display', 'none');
                jQuery('.showactivitywrapper').css('display', 'none');
                }
        }

        var containerwidth = jQuery('.teacher-img').width();
      
      if(containerwidth > 760) {
          var ele = jQuery('.space-div');
          ele.removeAttr('class');
          ele.attr('class', 'space-div col-8');

          var car = jQuery('.teacher-label');
          car.removeAttr('class');
          car.attr('class', 'teacher-label col-2');

          var car = jQuery('#teachersCarousel');          
          car.removeAttr('class');
          car.attr('class', 'carousel slide col-2');
      } else if(containerwidth > 367 && containerwidth < 761) {
          var ele = jQuery('.space-div');
          ele.removeAttr('class');
          ele.attr('class', 'space-div col-6');

          var car = jQuery('.teacher-label');
          car.removeAttr('class');
          car.attr('class', 'teacher-label col-2');

          var car = jQuery('#teachersCarousel');
          car.removeAttr('class');
          car.attr('class', 'carousel slide col-4');
      } else if(containerwidth > 200 && containerwidth < 367) {
          var ele = jQuery('.space-div');
          ele.removeAttr('class');
          ele.attr('class', 'space-div col-2');

          var car = jQuery('.teacher-label');
          car.removeAttr('class');
          car.attr('class', 'teacher-label col-3');

          var car = jQuery('#teachersCarousel');
          car.removeAttr('class');
          car.attr('class', 'carousel slide col-7');
      }
      else if(containerwidth < 200) {
          
          var ele = jQuery('.space-div');
          ele.removeAttr('class');
          ele.attr('class', 'space-div col-1');

          var car = jQuery('.teacher-label');
          car.removeAttr('class');
          car.attr('class', 'teacher-label col-2');

          var car = jQuery('#teachersCarousel');
          car.removeAttr('class');
          car.attr('class', 'carousel slide col-8');
      }
    });
